<%- include('layout', { title: 'Profile', content: `
  <h1>Welcome, ${user.Name}!</h1>
  <p>Email: ${user.Email}</p>
  
  ${spotifyProfile ? `
    <h2>Spotify Profile</h2>
    <p>Display Name: ${spotifyProfile.DisplayName}</p>
    <p>Profile URL: <a href="${spotifyProfile.ProfileUrl}">${spotifyProfile.ProfileUrl}</a></p>
    ${spotifyProfile.ImageUrl ? `<p><img src="${spotifyProfile.ImageUrl}" alt="Profile Image"></p>` : ''}
  ` : '<p>You have not linked your Spotify account yet. <a href="/spotify">Click here to link</a>.</p>'}
` }) %>